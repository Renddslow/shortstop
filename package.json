{
	"name": "shortstop",
	"version": "0.1.0",
	"private": false,
	"description": "A personal HR tool for managing touchbases and other personell stuff.",
	"repository": "https://github.com/Renddslow/shortstop",
	"license": "MIT",
	"author": "Matt McElwee <mubatt@wyopub.com>",
	"main": "public/index.html",
	"scripts": {
		"build": "node build.js",
		"start": "netlify dev"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,css,json,md,ts,tsx}": [
			"prettier --write"
		]
	},
	"prettier": "@dmsi/prettier-config",
	"ava": {
		"babel": false,
		"compileEnhancements": false,
		"concurrency": 4,
		"extensions": [
			"ts"
		],
		"files": [
			"src/**/*.test.ts"
		],
		"require": [
			"ts-node/register"
		],
		"timeout": "1m"
	},
	"devDependencies": {
		"@dmsi/prettier-config": "^1.3.0",
		"@types/node": "^16.4.11",
		"ava": "^3.15.0",
		"esbuild": "^0.12.17",
		"husky": "^7.0.1",
		"lint-staged": "^11.1.1",
		"mri": "^1.1.6",
		"netlify-cli": "^6.0.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.3.2",
		"ts-node": "^10.1.0",
		"typescript": "^4.3.5"
	},
	"dependencies": {
		"@netlify/functions": "^0.7.2",
		"goober": "^2.0.39",
		"jsonwebtoken": "^8.5.1",
		"preact": "^10.5.14"
	}
}
